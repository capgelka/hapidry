name:                hapidry
version:             0.2.5
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            http://github.com/capgelka/hapidry#readme
license:             GPL-2
license-file:        LICENSE
author:              capgelka
maintainer:          ldyach@yandex.ru
copyright:           GPL
category:            network
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Api, Options, Utils, Json, Internal.Api, Internal.Json
  ghc-options:         -O3
  build-depends:       base
                     , lens
                     , lens-aeson
                     , cryptohash 
                     , base16-bytestring
                     , containers
                     , wreq
                     , bytestring
                     , text
                     , aeson
                     , optparse-applicative>=0.13.0.0
                     , configurator
                     , hex
                     , attoparsec
                     , editor-open
                     , unordered-containers
                     , split
                     , time
                     , old-locale
                     , gitrev
  default-language:    Haskell2010
  c-sources: foreign/udecode.c
  cc-options: -O2 -std=c99
  include-dirs: foreign

executable hapidry
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -O3
  build-depends:       base
                     , hapidry
                     , lens     
                     , bytestring
                     , configurator
                     , aeson
                     , text
                     , gitrev
                     --delete later
  default-language:    Haskell2010

test-suite hapidry-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hapidry
                     , hspec
                     , text
                     , bytestring
                     , QuickCheck
                     , wreq
                     , lens
                     , aeson
                     , lens-aeson
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -O3
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/capgelka/hapidry
